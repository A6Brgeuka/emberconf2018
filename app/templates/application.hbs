{{#mobile-menu-wrapper isOpen=sideMenuOpen as |mmw|}}
  {{#mmw.mobile-menu as |mobile-menu|}}
    <div class="mobile-menu__header d-flex flex-column justify-content-between">
      <div class="header__text">
        {{user-avatar
          picture='/img/tomster.png'
          class='z-depth-1'
        }}
      </div>
      <div class="header__btn d-flex justify-content-between">
        <div>
          Tomster
          <small class="d-block">tomster@example.com</small>
        </div>
      </div>
    </div>
    <div class="mobile-menu__body">
      <ul class="nav flex-column">
        <li class="nav-item">
          {{#mobile-menu.link-to 'index' class="nav-link"}}{{material-icon 'home'}} Home{{/mobile-menu.link-to}}
        </li>
        <li class="nav-item">
          {{#mobile-menu.link-to 'posts' class="nav-link"}}{{material-icon 'archive'}} Archive{{/mobile-menu.link-to}}
        </li>
        <li class="divider"></li>
        <li class="nav-item">
          <a class="nav-link" href="#">Link</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" href="#">Disabled</a>
        </li>
      </ul>
    </div>
  {{/mmw.mobile-menu}}

  {{#mobile-bar-wrapper as |mbw|}}
    {{liquid-outlet enableGrowth=false class="app outlet"}}

    {{#mbw.mobile-bar type='top' collapsibleHeight=57 isLocked=false isOverlay=false class='search-menu'}}
      <div class="container">
        <div class="row">
          <div class="m-2 d-flex align-items-center">
            {{#unless isFastBoot}}
              {{#from-elsewhere name="mobile-bar-top-btn" as |btn|}}
                {{#liquid-if btn use='crossFade'}}
                  {{liquid-bind btn use='crossFade'}}
                {{else}}
                  {{#mmw.toggle target='left'}}{{material-icon 'menu' class='text-light'}}{{/mmw.toggle}}
                {{/liquid-if}}
              {{/from-elsewhere}}
            {{else}}
              {{#link-to (query-params sideMenuOpen=sideMenuNewState) class='mobile-menu__toggle'}}{{material-icon 'menu'}}{{/link-to}}
            {{/unless}}

            <h1 class="text-white h4 font-weight-light d-inline-block align-middle mb-0 ml-3">EmberConf 2018</h1>
          </div>
        </div>
        <div class="row">
          {{from-elsewhere name="mobile-bar-top"}}
        </div>
      </div>
    {{/mbw.mobile-bar}}

    {{#mbw.mobile-bar type='bottom' isLocked=true withShadow=false}}
      {{#bs-navbar fluid=false class='navbar-expand' id='main-menu' as |navbar|}}
        {{#navbar.content}}
          {{#navbar.nav as |nav|}}
            {{#nav.item}}
              {{#nav.link-to "index" class='text-center'}}
                {{material-icon 'home' size='lg' class='d-md-none'}}
                <div>Home</div>
              {{/nav.link-to}}
            {{/nav.item}}
            {{#nav.item}}
              {{#nav.link-to "posts" class='text-center'}}
                {{material-icon 'archive' size='lg' class='d-md-none'}}
                <div>Archive</div>
              {{/nav.link-to}}
            {{/nav.item}}
          {{/navbar.nav}}
        {{/navbar.content}}
      {{/bs-navbar}}
    {{/mbw.mobile-bar}}
  {{/mobile-bar-wrapper}}

  {{#mmw.mobile-menu type='right' maxWidth=75 as |mobile-menu|}}
    <div class="mobile-menu__body">
      <ul class="nav flex-column">
        <li class="nav-item">
          {{#mobile-menu.link-to 'index' class="nav-link"}}{{material-icon 'home'}}{{/mobile-menu.link-to}}
        </li>
        <li class="nav-item">
          {{#mobile-menu.link-to 'posts' class="nav-link"}}{{material-icon 'archive'}}{{/mobile-menu.link-to}}
        </li>
      </ul>
    </div>
  {{/mmw.mobile-menu}}
{{/mobile-menu-wrapper}}