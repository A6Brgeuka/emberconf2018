{{#bs-navbar toggleBreakpoint='xl' fluid=false position=(if media.isMobile 'fixed-bottom' 'fixed-top') id='main-menu' as |navbar|}}
  {{#navbar.content}}
    {{#navbar.nav as |nav|}}
      {{#nav.item}}
        {{#nav.link-to "index" class=(if media.isMobile 'text-center')}}
          {{#if media.isMobile}}
            {{material-icon 'home' size='lg'}}
            <div>Home</div>
          {{else}}
            Home
          {{/if}}
        {{/nav.link-to}}
      {{/nav.item}}
      {{#nav.item}}
        {{#nav.link-to "posts" class=(if media.isMobile 'text-center')}}
          {{#if media.isMobile}}
            {{material-icon 'archive' size='lg'}}
            <div>Archive</div>
          {{else}}
            Archive
          {{/if}}
        {{/nav.link-to}}
      {{/nav.item}}
    {{/navbar.nav}}
  {{/navbar.content}}
{{/bs-navbar}}

<div class="container">
  {{liquid-outlet enableGrowth=false}}
</div>