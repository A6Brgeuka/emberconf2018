{{#mobile-menu-wrapper isOpen=sideMenuOpen as |mmw|}}
  {{#if menuEnabled}}
    {{#mmw.mobile-menu as |mobile-menu|}}
      <div class="mobile-menu__header d-flex flex-column justify-content-between">
        <div class="header__text">
          {{user-avatar
            picture='/img/tomster.png'
            class='z-depth-1'
          }}
        </div>
        <div class="header__btn d-flex justify-content-between">
          <div>
            Tomster
            <small class="d-block">tomster@example.com</small>
          </div>
        </div>
      </div>
      <div class="mobile-menu__body">
        <ul class="nav flex-column">
          <li class="nav-item">
            {{#mobile-menu.link-to 'home.index' class="nav-link"}}{{material-icon 'home'}} Home{{/mobile-menu.link-to}}
          </li>
          <li class="nav-item">
            {{#mobile-menu.link-to 'home.posts' class="nav-link"}}{{material-icon 'archive'}} Archive{{/mobile-menu.link-to}}
          </li>
          <li class="divider"></li>
          <li class="nav-item">
            {{#mobile-menu.link-to 'home.settings' class="nav-link"}}{{material-icon 'settings'}} Settings{{/mobile-menu.link-to}}
          </li>
        </ul>
      </div>
    {{/mmw.mobile-menu}}
  {{/if}}
  {{#animated-container class=(if motion.isAnimating 'animated-page')}}
    {{#mobile-bar-wrapper as |mbw|}}
      {{outlet}}

      {{#mbw.mobile-bar type='top' withShadow=false}}
        {{#animated-container}}
          <div class="container">
            <div class="row">
              <div class="m-3 d-flex align-items-center w-100" style="position: relative; min-height: 25px;">
                {{#from-elsewhere name="mobile-bar-top-btn-left" as |btn|}}
                  {{#animated-bind btn use=btnLeftIconTransition duration=300 as |animatedBtn|}}
                    <div class="mobile-bar__icon">
                      {{#if animatedBtn}}
                        {{#link-to animatedBtn.targetRoute}}
                          {{material-icon animatedBtn.icon class='align-top'}}
                        {{/link-to}}
                      {{else}}
                        {{#mmw.toggle target='left'}}{{material-icon 'menu' class='align-top'}}{{/mmw.toggle}}
                      {{/if}}
                    </div>
                  {{/animated-bind}}
                  {{#animated-bind btn use=btnLeftTransition duration=300 as |animatedBtn|}}
                    {{#if animatedBtn}}
                      {{#link-to animatedBtn.targetRoute class='mobile-bar__btn'}}
                        {{animatedBtn.text}}
                      {{/link-to}}
                    {{/if}}
                  {{/animated-bind}}
                {{/from-elsewhere}}

                {{#from-elsewhere name="mobile-bar-top-title" as |title|}}
                  {{#animated-bind title use=titleTransition duration=300 as |animatedTitle|}}
                    {{#if animatedTitle}}
                      <h1 class="mobile-bar__title h6 mb-0 font-weight-normal" style="line-height: 1.5;">
                        {{animatedTitle}}
                      </h1>
                    {{else}}
                      <h1 class="mobile-bar__title mobile-bar__title--logo h4 font-weight-light d-inline-block align-middle mb-0 text-nowrap">
                        EmberConf 2018
                      </h1>
                    {{/if}}
                  {{/animated-bind}}
                {{/from-elsewhere}}

                {{#from-elsewhere name="mobile-bar-top-btn-right" as |btn|}}
                  {{#animated-bind btn use=btnLeftIconTransition duration=100 as |animatedBtn|}}
                    {{component animatedBtn class="mobile-bar__btn mobile-bar__btn--right"}}
                  {{/animated-bind}}
                {{/from-elsewhere}}
              </div>
            </div>
            <div class="row">
              {{from-elsewhere name="mobile-bar-top-second-row"}}
            </div>
          </div>
        {{/animated-container}}
      {{/mbw.mobile-bar}}

      {{#mbw.mobile-bar type='bottom' withShadow=false}}
        {{#if menuEnabled}}
          {{#bs-navbar fluid=false class='navbar-expand' id='main-menu' as |navbar|}}
            {{#navbar.content}}
              {{#navbar.nav as |nav|}}
                {{#nav.item}}
                  {{#nav.link-to "home.index" class='text-center'}}
                    {{material-icon 'home' size='lg' class='d-md-none'}}
                    <div>Home</div>
                  {{/nav.link-to}}
                {{/nav.item}}
                {{#nav.item}}
                  {{#nav.link-to "home.posts" class='text-center'}}
                    {{material-icon 'archive' size='lg' class='d-md-none'}}
                    <div>Archive</div>
                  {{/nav.link-to}}
                {{/nav.item}}
                {{#nav.item}}
                  {{#nav.link-to "home.settings" class='text-center'}}
                    {{material-icon 'settings' size='lg' class='d-md-none'}}
                    <div>Settings</div>
                  {{/nav.link-to}}
                {{/nav.item}}
              {{/navbar.nav}}
            {{/navbar.content}}
          {{/bs-navbar}}
        {{/if}}
      {{/mbw.mobile-bar}}
    {{/mobile-bar-wrapper}}
  {{/animated-container}}
{{/mobile-menu-wrapper}}